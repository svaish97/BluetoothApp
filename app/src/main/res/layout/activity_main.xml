<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/colorRed"
        tools:context=".MainActivity">
    
    <LinearLayout
            android:background="#FFF"
            android:padding="10dp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <TextView
                android:padding="10dp"
                android:textColor="@color/colorRed"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volacano Gas Sensor"
                tools:ignore="HardcodedText"/>
        <LinearLayout
                android:padding="4dp"
                android:background="#000"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:background="@color/colorBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="#FFFFFF"
                        android:gravity="left"
                        android:id="@+id/tv_1"
                        android:layout_width="150dp"
                        android:textSize="21dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
                <TextView
                        android:textColor="#FFFFFF"
                        android:gravity="left"
                        android:id="@+id/result_1"
                        android:textSize="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

            </LinearLayout>

            <LinearLayout
                    android:background="@color/colorBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="#FFFFFF"
                        android:gravity="left"
                        android:id="@+id/tv_2"

                        android:layout_width="150dp"
                        android:textSize="22dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
                <TextView
                        android:textColor="#FFFFFF"
                        android:gravity="left"
                        android:id="@+id/result_2"
                        android:textSize="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

            </LinearLayout>

            <LinearLayout
                    android:background="@color/colorBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="#FFFFFF"
                        android:gravity="left"
                        android:id="@+id/tv_3"
                        android:layout_width="150dp"
                        android:textSize="22dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
                <TextView
                        android:textColor="#FFFFFF"
                        android:gravity="left"
                        android:id="@+id/result_3"
                        android:textSize="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

            </LinearLayout>

            <LinearLayout
                    android:background="@color/colorBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="#FFFFFF"
                        android:gravity="left"
                        android:id="@+id/tv_4"
                        android:layout_width="150dp"
                        android:textSize="22dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
                <TextView
                        android:textColor="#FFFFFF"
                        android:gravity="left"
                        android:id="@+id/result_4"
                        android:textSize="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    
    <LinearLayout
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1">

        <LinearLayout
                android:padding="10dp"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1.1"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
            <LinearLayout
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_marginEnd="60sp"
                        android:id="@+id/star"
                        android:src="@drawable/ic_power_settings"
                        android:background="#DA1248"
                        android:layout_width="60sp"
                        android:layout_height="50dp"/>
                <Button
                        android:text="0"
                        android:textSize="20sp"
                        android:id="@+id/zero"
                        android:background="#125CDA"
                        android:layout_marginEnd="60sp"
                        android:layout_width="60sp"
                        android:layout_height="50sp"
                        tools:ignore="UnusedAttribute"/>
                <Button
                        android:id="@+id/A"
                        android:text="TEST/CAL"
                        android:textSize="12sp"
                        android:background="@color/colorPrimary"
                        android:layout_width="60sp"
                        android:layout_height="50sp"
                        tools:ignore="HardcodedText"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
            <LinearLayout
                    android:layout_marginStart="30sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3">
                <Button
                        android:id="@+id/one"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="12sp"
                        android:text="1"
                        android:textSize="20sp"
                        android:background="@drawable/circular_button"
                        android:layout_width="60sp"
                        android:layout_height="50sp"/>
                <Button
                        android:id="@+id/two"
                        android:background="@color/colorPrimary"
                        android:text="2"
                        android:textSize="20sp"
                        android:layout_marginStart="18sp"
                        android:layout_marginEnd="18sp"
                        android:layout_width="60sp"
                        android:layout_height="50sp"
                        />
                <Button android:layout_width="60sp"
                        android:layout_height="50sp"
                        android:layout_marginStart="12sp"
                        android:text="3"
                        android:id="@+id/three"
                        android:textSize="20sp"
                        android:background="@drawable/circular_button"
                />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
            <LinearLayout
                    android:layout_marginStart="30sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3">
                <Button
                        android:id="@+id/four"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="12sp"
                        android:background="@color/colorPrimary"
                        android:text="4"
                        android:textSize="20sp"
                        android:layout_width="60sp"
                        android:layout_height="50sp"/>
                <Button
                        android:id="@+id/five"
                        android:text="5"
                        android:textSize="20sp"
                        android:background="#125CDA"
                        android:layout_marginStart="18sp"
                        android:layout_marginEnd="18sp"
                        android:layout_width="60sp"
                        android:layout_height="50sp"/>
                <Button
                        android:id="@+id/six"
                        android:layout_marginStart="12sp"
                        android:text="6"
                        android:textSize="20sp"
                        android:layout_width="60sp"
                        android:layout_height="50sp"
                        android:background="@color/colorPrimary"
                />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
            <LinearLayout
                    android:layout_marginStart="30sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3">
                <Button
                        android:id="@+id/seven"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="12sp"
                        android:text="7"
                        android:textSize="20sp"
                        android:background="#125CDA"
                        android:layout_width="60sp"
                        android:layout_height="50sp"/>
                <Button
                        android:id="@+id/eight"
                        android:text="8"
                        android:textSize="20sp"
                        android:layout_marginStart="18sp"
                        android:layout_marginEnd="18sp"
                        android:layout_width="60sp"
                        android:layout_height="50sp"
                        android:background="@color/colorPrimary"
                        />
                <Button
                        android:layout_width="60sp"
                        android:layout_height="50sp"
                        android:text="9"
                         android:layout_marginStart="12sp"
                        android:id="@+id/nine"
                        android:textSize="20sp"
                        android:background="#125CDA"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
            <LinearLayout
                    android:padding="12sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4">
                <Button
                        android:id="@+id/C"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:text="ZERO"
                        android:textSize="12sp"
                        android:background="#E5C01C"
                        android:layout_width="60sp"
                        android:layout_height="50sp"/>
                <Button
                        android:id="@+id/hash"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:text="BACK"
                        android:textSize="12sp"
                        android:background="#E5C01C"
                        android:layout_width="60sp"
                        android:layout_height="50sp"/>
                <Button
                        android:id="@+id/B"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:text="COM/Check"
                        android:textSize="12sp"
                        android:background="#E5C01C"
                        android:layout_width="60sp"
                        android:layout_height="50sp"/>
                <Button
                        android:layout_weight="1"
                        android:text="PRINT"
                        android:id="@+id/D"
                        android:textSize="12sp"
                        android:background="#E5C01C"
                        android:layout_width="60sp"
                        android:layout_height="50sp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>