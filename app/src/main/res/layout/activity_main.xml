<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volacano Gas Sensor"
            tools:ignore="HardcodedText"/>
    <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:gravity="left"
                    android:id="@+id/tv_1"
                    android:layout_width="150dp"
                    android:textSize="24dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
            <TextView
                    android:gravity="left"
                    android:id="@+id/result_1"
                    android:textSize="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:gravity="left"
                    android:id="@+id/tv_2"

                    android:layout_width="150dp"
                    android:textSize="24dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
            <TextView
                    android:gravity="left"
                    android:id="@+id/result_2"
                    android:textSize="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:gravity="left"
                    android:id="@+id/tv_3"
                    android:layout_width="150dp"
                    android:textSize="24dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
            <TextView
                    android:gravity="left"
                    android:id="@+id/result_3"
                    android:textSize="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:gravity="left"
                    android:id="@+id/tv_4"
                    android:layout_width="150dp"
                    android:textSize="24dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
            <TextView
                    android:gravity="left"
                    android:id="@+id/result_4"
                    android:textSize="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
            android:background="#44484B"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="1"
                        android:id="@+id/one"
                        android:layout_width="0dp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText,RtlHardcoded"/>
                <Button
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="2"
                        android:id="@+id/two"
                        android:layout_width="0dp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>
                <Button
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="3"
                        android:id="@+id/three"
                        android:layout_width="0dp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>
                <Button
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorRed"
                        android:textColor="#FFFFFF"
                        android:text="A"
                        android:id="@+id/A"
                        android:layout_width="0dp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="4"
                        android:id="@+id/four"
                        android:layout_width="0dp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText,RtlHardcoded"/>
                <Button
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="5"
                        android:id="@+id/five"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>
                <Button
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="6"
                        android:id="@+id/six"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>
                <Button
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorRed"
                        android:textColor="#FFFFFF"
                        android:text="B"
                        android:id="@+id/B"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="7"
                        android:id="@+id/seven"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText,RtlHardcoded"/>
                <Button
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="8"
                        android:id="@+id/eight"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>
                <Button
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="9"
                        android:id="@+id/nine"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>
                <Button
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorRed"
                        android:textColor="#FFFFFF"
                        android:text="C"
                        android:id="@+id/C"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorRed"
                        android:textColor="#FFFFFF"
                        android:text="*"
                        android:id="@+id/star"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText,RtlHardcoded"/>
                <Button
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:textColor="#FFFFFF"
                        android:text="0"
                        android:id="@+id/zero"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>
                <Button
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorRed"
                        android:textColor="#FFFFFF"
                        android:text="#"
                        android:id="@+id/hash"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>
                <Button
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:background="@color/colorRed"
                        android:textColor="#FFFFFF"
                        android:text="D"
                        android:id="@+id/D"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        tools:ignore="HardcodedText"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>