<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
   <LinearLayout
           android:layout_weight="1.3"
           android:layout_width="match_parent"
           android:layout_height="0dp">

   </LinearLayout>
    <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">
        <Button
                android:background="@color/colorBlue"
                android:textColor="#FFFFFF"
                android:text="1"
                android:id="@+id/one"
                android:layout_width="90sp"
                android:layout_height="70sp"
                tools:ignore="HardcodedText,RtlHardcoded"/>
            <Button
                    android:background="@color/colorBlue"
                    android:textColor="#FFFFFF"
                    android:text="2"
                    android:id="@+id/two"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText"/>
            <Button
                    android:background="@color/colorBlue"
                    android:textColor="#FFFFFF"
                    android:text="3"
                    android:id="@+id/three"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText"/>
            <Button
                    android:background="@color/colorRed"
                    android:textColor="#FFFFFF"
                    android:text="A"
                    android:id="@+id/A"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <Button
                    android:background="@color/colorBlue"
                    android:textColor="#FFFFFF"
                    android:text="4"
                    android:id="@+id/four"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText,RtlHardcoded"/>
            <Button
                    android:background="@color/colorBlue"
                    android:textColor="#FFFFFF"
                    android:text="5"
                    android:id="@+id/five"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText"/>
            <Button
                    android:background="@color/colorBlue"
                    android:textColor="#FFFFFF"
                    android:text="6"
                    android:id="@+id/six"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText"/>
            <Button
                    android:background="@color/colorRed"
                    android:textColor="#FFFFFF"
                    android:text="B"
                    android:id="@+id/B"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <Button
                    android:background="@color/colorBlue"
                    android:textColor="#FFFFFF"
                    android:text="7"
                    android:id="@+id/seven"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText,RtlHardcoded"/>
            <Button
                    android:background="@color/colorBlue"
                    android:textColor="#FFFFFF"
                    android:text="8"
                    android:id="@+id/eight"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText"/>
            <Button
                    android:background="@color/colorBlue"
                    android:textColor="#FFFFFF"
                    android:text="9"
                    android:id="@+id/nine"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText"/>
            <Button
                    android:background="@color/colorRed"
                    android:textColor="#FFFFFF"
                    android:text="C"
                    android:id="@+id/C"
                    android:layout_width="90sp"
                    android:layout_height="70sp"
                    tools:ignore="HardcodedText"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:background="@color/colorRed"
                android:textColor="#FFFFFF"
                android:text="*"
                android:id="@+id/star"
                android:layout_width="90sp"
                android:layout_height="70sp"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        <Button
                android:background="@color/colorBlue"
                android:textColor="#FFFFFF"
                android:text="0"
                android:id="@+id/zero"
                android:layout_width="90sp"
                android:layout_height="70sp"
                tools:ignore="HardcodedText"/>
        <Button
                android:background="@color/colorRed"
                android:textColor="#FFFFFF"
                android:text="#"
                android:id="@+id/hash"
                android:layout_width="90sp"
                android:layout_height="70sp"
                tools:ignore="HardcodedText"/>
        <Button
                android:background="@color/colorRed"
                android:textColor="#FFFFFF"
                android:text="D"
                android:id="@+id/D"
                android:layout_width="90sp"
                android:layout_height="70sp"
                tools:ignore="HardcodedText"/>
    </TableRow>



    </LinearLayout>

</LinearLayout>